// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  // provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee{
  id        String @id @default(cuid())
  name      String @unique
	salaries  Salary[]
}

model Salary {

  id            String @id @default(cuid())
  year          String
  salaryAmount  Float
  division      String
  department    String
  title         String
  employeeName  String
  employee      Employee @relation(fields: [employeeName], references: [name], onDelete: Cascade)

}

